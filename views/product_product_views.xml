<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="product_product_view_form" model="ir.ui.view">
            <field name="name">product.product.view.form.inherit.ww_product_dimensions</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <div name="weight" position="after">
                    <label for="ww_length"/>
                    <div class="o_row" name="ww_length">
                        <field name="ww_length" />
                        <span><field name="ww_dimensions_uom_name"/></span>
                    </div>
                    <label for="ww_width"/>
                    <div class="o_row" name="ww_width">
                        <field name="ww_width" />
                        <span><field name="ww_dimensions_uom_name"/></span>
                    </div>
                    <label for="ww_height"/>
                    <div class="o_row" name="ww_height">
                        <field name="ww_height" />
                        <span><field name="ww_dimensions_uom_name"/></span>
                    </div>
                </div>
            </field>
        </record>

        <record id="product_product_easy_view_form" model="ir.ui.view">
            <field name="name">product.product.easy.view.form.inherit.ww_product_dimensions</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_variant_easy_edit_view"/>
            <field name="arch" type="xml">
                <group name="weight" position="after">
                    <label for="ww_length"/>
                    <div class="o_row" name="ww_length">
                        <field name="ww_length" />
                        <span><field name="ww_dimensions_uom_name"/></span>
                    </div>
                    <label for="ww_width"/>
                    <div class="o_row" name="ww_width">
                        <field name="ww_width" />
                        <span><field name="ww_dimensions_uom_name"/></span>
                    </div>
                    <label for="ww_height"/>
                    <div class="o_row" name="ww_height">
                        <field name="ww_height" />
                        <span><field name="ww_dimensions_uom_name"/></span>
                    </div>
                </group>
            </field>
        </record>
    </data>
</odoo>